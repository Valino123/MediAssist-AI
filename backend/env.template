# =============================================================================
# MediAssist AI - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.template .env
#
# Note: Variables with default values in config.py are optional
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=localhost
PORT=8000
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=100
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,docx,txt

# =============================================================================
# QWEN MODEL (ALIBABA CLOUD) - PRIMARY LLM
# =============================================================================
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-turbo
QWEN_TEMPERATURE=0.7
QWEN_MAX_TOKENS=2000

# =============================================================================
# AZURE OPENAI - FOR EMBEDDINGS
# =============================================================================
# Get your API key from: https://portal.azure.com/
EMBEDDING_API_KEY=your_azure_openai_key_here
EMBEDDING_AZURE_ENDPOINT=https://your-resource.openai.azure.com/
EMBEDDING_DEPLOYMENT=your_embedding_deployment_name
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_API_VERSION=2024-02-15-preview

# =============================================================================
# AZURE SPEECH SERVICES
# =============================================================================
# Get your API key from: https://portal.azure.com/
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=westus
AZURE_TTS_VOICE_NAME=en-US-JennyNeural
AZURE_STT_VOICE_NAME=en-US-JennyNeural
SPEECH_RECOGNITION_LANGUAGE=en-US
AUDIO_FORMAT=wav
AUDIO_SAMPLE_RATE=16000

# =============================================================================
# GOOGLE SEARCH API
# =============================================================================
# Get your API key from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here
SEARCH_TIMEOUT=10
SEARCH_RESULTS_LIMIT=5

# =============================================================================
# DATABASE PATHS
# =============================================================================
VECTOR_DB_PATH=data/qdrant_db
DOCS_DB_PATH=data/docs_db
PARSED_DOCS_PATH=data/parsed_docs
QDRANT_HOST=
QDRANT_PORT=6333
QDRANT_USE_SSL=False
QDRANT_API_KEY=dev-qdrant-key

# =============================================================================
# RAG (RETRIEVAL-AUGMENTED GENERATION) SETTINGS
# =============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_RETRIEVAL_DOCS=5
RAG_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# HYBRID RETRIEVAL SETTINGS
# =============================================================================
ENABLE_HYBRID_RETRIEVAL=True
HYBRID_ALPHA=0.7

# =============================================================================
# QUERY EXPANSION SETTINGS
# =============================================================================
ENABLE_QUERY_EXPANSION=True
QUERY_EXPANSION_TEMPERATURE=0.3
QUERY_EXPANSION_MAX_TOKENS=200

# =============================================================================
# CROSS-ENCODER RERANKING SETTINGS
# =============================================================================
ENABLE_CROSS_ENCODER_RERANKING=True
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_K=20

# =============================================================================
# MULTI-AGENT SETTINGS
# =============================================================================
AGENT_DECISION_MODEL=qwen-omni-turbo
AGENT_DECISION_TEMPERATURE=0.1
AGENT_CONFIDENCE_THRESHOLD=0.8
ENABLE_AGENT_ROUTING=True

# =============================================================================
# COMPUTER VISION / MEDICAL IMAGE ANALYSIS
# =============================================================================
MODELS_PATH=models
BRAIN_TUMOR_MODEL_PATH=models/brain_tumor_model.pth
CHEST_XRAY_MODEL_PATH=models/chest_xray_model.pth
SKIN_LESION_MODEL_PATH=models/skin_lesion_model.pth
IMAGE_PREPROCESSING_SIZE=224
CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# CHAT SETTINGS
# =============================================================================
MAX_CONVERSATION_HISTORY=10
CHAT_SYSTEM_PROMPT=You are a helpful medical assistant. Provide accurate, helpful information about health and medical topics. Always remind users to consult healthcare professionals for serious medical concerns.

# =============================================================================
# SECURITY AND VALIDATION SETTINGS
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
MAX_MESSAGE_LENGTH=2000
ENABLE_PROFANITY_FILTER=True
ENABLE_CONTENT_VALIDATION=True
ENABLE_RATE_LIMITING=True

# =============================================================================
# WINDOWS SERVICE SETTINGS (OPTIONAL)
# =============================================================================
ENABLE_WINDOWS_SERVICE=False

